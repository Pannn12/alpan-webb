<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .wrapper {
    display: flex;
  }
  .wrapper .dynamic-text {
    margin-left: -40px;
    height: 90px;
    line-height: 90px;
    overflow: hidden;
  }

  .dynamic-text li {
    list-style: none;
    color: white;
    font-size: 30px;
    font-weight: 500;
    position: relative;
    top: 0;
    animation: slide 12 steps(4) infinite;
  }

  @keyframes slide {
    100% {
      top: -360px;
    }
  }

  .dynamic-text li span {
    position: relative;
    margin: 5px o;
    line-height: 90px;
  }
  .dynamic-text li span::after {
    content: "";
    position: absolute;
    left: 0;
    height: 78px;
    width: 100%;
    background: #13151a;
    border-left: 2px solid #13151a;
    animation: typing 3s steps(14) infinite;
  }

  @keyframes typing {
    40%,
    60% {
      left: calc(100% + 30px);
    }
    100% {
      left: 0;
    }
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    display: flex;
    color: white;
    text-align: justify;
    margin-bottom: 2rem;
    background-image: url("../image/ss.png");
    background-size: cover;
    background-position: center;
    border: 3px solid rgb(193, 232, 255);
    padding: 1.5rem;
    border-radius: 8px;
    font-size: 18px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    padding: 20px;
  }

  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
    background: rgba(193, 232, 255, 0.12);
    color: rgb(193, 232, 255);
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .keterampilan {
    text-align: left;
    color: #c1e8ff;
    font-size: 18px;
  }
  .keterampilann {
    text-align: left;
    color: white;
    font-size: 18px;
  }
  .about-me {
    text-align: center;
    color: white;
    font-size: 18px;
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
  body {
    margin: 0;
    font-family: Arial, sans-serif;
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #c1e8ff;
    padding: 15px;
  }

  .navbar-brand {
    color: #fff;
  }

  .navbar-nav {
    display: flex;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    margin-left: 10px;
  }
  .nav-link {
    color: #c1e8ff;
    text-decoration: none;
  }

  .nav-link:hover {
    color: #a4d4f9;
  }

  .contact-container {
    display: flex;
    align-items: center;
  }

  .instagram-icon {
    width: 24px;
    height: 24px;
    margin-right: 8px;
  }

  .username {
    margin-top: -4px;
    font-size: 18px;
    color: white;
  }
</style>
